		    <artifactId>jetty-maven-plugin</artifactId>  
		    <version>8.1.5.v20120716</version>  
		    <configuration>  
		        <stopPort>9966</stopPort>  
		        <stopKey>foo</stopKey>  
		        <scanIntervalSeconds>10</scanIntervalSeconds>  
		        <webApp>  
		            <contextPath>/find</contextPath>  
		        </webApp>  
		    </configuration>  
		</plugin>
		 <!-- maven-tomcat7服务器插件 --> 	
          <plugin>
